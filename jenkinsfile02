    stage ('build') {
        steps {
            sh 'echo this is build team'
        }
    }
    stages {
        stage ('test') {
            steps {
                sh 'echo this test team'
            }
        }
        stages {
            stage ('this is deployment') {
                steps{
                    sh 'echo this deployment '

                }
            }
            }
        }
}
